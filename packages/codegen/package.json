{
  "name": "@blimu/codegen",
  "version": "0.5.1",
  "publisher": "blimu-dev",
  "description": "Generate type-safe SDKs from OpenAPI specifications",
  "repository": "https://github.com/blimu-dev/packages",
  "author": "viniciusdacal",
  "license": "MIT",
  "bin": "./dist/main.js",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/main.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts ",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@nestjs/common": "^11.1.12",
    "@nestjs/core": "^11.1.12",
    "handlebars": "^4.7.8",
    "nest-commander": "^3.20.1",
    "openapi-types": "^12.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@blimu/fetch": "^0.4.0",
    "@swc/cli": "^0.7.10",
    "@swc/core": "^1.15.10",
    "@types/handlebars": "^4.1.0",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "msw": "^2.12.7",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.12.0",
  "volta": {
    "node": "25.4.0",
    "yarn": "4.12.0"
  }
}
