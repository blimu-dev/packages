{
  "name": "blimu-packages",
  "version": "0.2.0",
  "description": "Blimu packages - A collection of open-source packages built by Blimu team.",
  "repository": "https://github.com/blimu-dev/packages",
  "author": "viniciusdacal",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "packageManager": "yarn@4.12.0",
  "volta": {
    "node": "25.2.1",
    "yarn": "4.12.0"
  },
  "files": [
    "packages/*/dist/**"
  ],
  "scripts": {
    "build": "yarn build:codegen && yarn build:others",
    "build:codegen": "yarn workspace @blimu/codegen build",
    "build:others": "yarn workspace @blimu/fetch build",
    "typecheck": "yarn workspaces foreach -A run typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,jsx,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,cjs,ts,mts,cts,jsx,tsx,json,md,yml,yaml}\"",
    "clean": "yarn workspaces foreach -A run clean",
    "test": "yarn workspaces foreach -A run test",
    "test:coverage": "yarn workspaces foreach -A run test:coverage",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "version-packages": "changeset version",
    "release": "yarn build && changeset publish",
    "prepare": "husky"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
